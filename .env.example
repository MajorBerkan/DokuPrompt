# PostgreSQL Database Configuration
POSTGRES_DB=codedoc
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# SQLAlchemy Database URL (psycopg v3)
# For local Docker setup:
DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/codedoc
# For remote PostgreSQL database (example for HS server):
# DATABASE_URL=postgresql+psycopg2://admin:passwort@141.19.113.165:5432/appdb

# Celery / Redis Configuration
CELERY_BROKER_URL=redis://redis-server:6379/0
CELERY_RESULT_BACKEND=redis://redis-server:6379/0

# Frontend API URL
VITE_API_BASE_URL=http://127.0.0.1:8000

# AI Model Configuration
MODEL_NAME=eu.anthropic.claude-sonnet-4-20250514-v1:0
ANTHROPIC_API_KEY=your-anthropic-api-key-here

